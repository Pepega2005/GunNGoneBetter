@using GunNGoneBetter_Models
@model GunNGoneBetter_Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}


<div class="container">

    <div>
        <button class="btn filter-button" data-filter="all">All</button>
        @foreach (var item in Model.Categories)
        {
            <button class="btn filter-button" data-filter="@item.Name.Replace(' ', '_')">
                @item.Name
            </button>
        }
    </div>

    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var prod in Model.Products)
        {
            <partial name="_ProductCard" model="prod"/>
        }
    </div>
</div>

@section Scripts {
        <script>
            $(document).ready(function () {
                $('.filter-button').click(function () {
                    var value = $(this).attr('data-filter');

                    if (value == "all") {
                        $('.filter').show('1000');
                    }
                    else {
                        $('.filter').not('.' + value).hide('1000');
                        $('.filter').filter('.' + value).show('1000');
                    }
                });
            });

        </script>

}