@model GunNGoneBetter_Models.Product
@using GunNGoneBetter_Utility


<div class="card filter @Model.Category.Name.Replace(' ', '_')" style="width: 18rem;  margin-left: 5px">
  <img src="@PathManager.ImageProductPath@Model.Image" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">@Model.Name</h5>
    <p class="card-text">
        @Model.ShortDescription
    </p>
    <span class="badge text-bg-primary">Primary</span>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">Details</a>
  </div>
</div>